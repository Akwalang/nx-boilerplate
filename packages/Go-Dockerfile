# Build the application from source
FROM golang:1.22.2 AS build-stage

ARG SOURCE_FOLDER

WORKDIR /app

COPY ./${SOURCE_FOLDER}/go.mod ./
COPY ./${SOURCE_FOLDER}/go.sum ./

RUN go mod download

COPY ./${SOURCE_FOLDER}/cmd ./cmd
COPY ./${SOURCE_FOLDER}/pkg ./pkg

RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/${SOURCE_FOLDER} ./cmd/main.go

# Run the tests in the container
FROM build-stage AS run-test-stage
RUN go test -v ./...

# Deploy the application binary into a lean image
FROM gcr.io/distroless/base-debian11 AS build-release-stage

WORKDIR /

COPY --from=build-stage /bin/${SOURCE_FOLDER} /bin/${SOURCE_FOLDER}

EXPOSE 8080

USER nonroot:nonroot

ENTRYPOINT ["/bin/${SOURCE_FOLDER}"]
